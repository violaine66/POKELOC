<div class="container mt-5">
  <div class="col-12 col-sm-6 pt-3">
    <div class=" new-review rounded p-3">
        <h5>Add your review</h5>
          <%= simple_form_for [@booking,@review],  url: booking_reviews_path(@booking), local: true do |f| %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, label: "rating (1-5)" %>
          <%= f.input :comment, as: :text, label: "Add your review here..." %>
          <%= f.submit "Send your review", class: "btn btn-outline-warning my-2 "  %>
          <% end %>
    </div>
  </div >
</div>
