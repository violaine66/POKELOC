<div id="background">
  <style>
    body {
      background-image: url('/images/pokehome2.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
    }
  </style>

  <div class="description">
    <h1>Enter the world of Pokemon and become League Champion!</h1>
  </div>

  <div  data-controller = "audio" id="buttons-container">
    <audio data-audio-target="btnAudio">
      <source src="/audio/pokemon-cry.wav" type="audio/wav">
    </audio>
    <div  class="home-button">
        <%= link_to "Come in, catch and train!", pokemons_path, data: { action: "click->audio#playMusic" } %>
      </div>
    </div>
</div>
