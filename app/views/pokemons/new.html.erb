<h2>Créer un Pokémon</h2>

<%= form_with model: @pokemon, local: true do |form| %>
  <div>
    <%= form.label :name, "Nom du Pokémon" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :element_type, "Type de Pokémon" %>
    <%= form.text_field :element_type, required: true %>
  </div>

  <div>
    <%= form.label :address, "Adresse" %>
    <%= form.text_field :address, placeholder: "Ex: Paris, France", required: true %>
  </div>

  <div>
    <%= form.label :price_per_day, "Prix par jour (€)" %>
    <%= form.number_field :price_per_day, min: 0, required: true %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, required: true %>
  </div>

  <div>
      <%= form.file_field :photo, accept: "image/png,image/jpeg" %> 
  </div>

  <div>
    <%= form.submit "Créer Pokémon" %>
  </div>
<% end %>

<%= link_to "Retour à la liste", pokemons_path %>
